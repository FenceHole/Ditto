# Marketplace Bot Analyzer Configuration
# Copy this file to .env and fill in your values

# Anthropic API (required for image analysis and AI features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# eBay API (recommended - for real sold listings pricing data)
# Get credentials at: https://developer.ebay.com/
EBAY_APP_ID=your_ebay_app_id_client_id
EBAY_CERT_ID=your_ebay_cert_id_client_secret
EBAY_DEV_ID=your_ebay_dev_id
EBAY_AUTH_TOKEN=your_ebay_auth_token_optional
EBAY_SANDBOX=false

# Facebook Marketplace (optional - for automated posting)
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
FACEBOOK_PAGE_ID=your_facebook_page_id

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Storage
UPLOAD_DIR=./storage/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Database (for future PostgreSQL/MongoDB integration)
# DATABASE_URL=postgresql://user:password@localhost/marketplace_bot
# DATABASE_URL=mongodb://localhost:27017/marketplace_bot
